{
  "name": "@hyoban/components",
  "version": "6.2.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyoban/config",
    "directory": "packages/components"
  },
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./css": "./dist/tailwind.css",
    "./button": {
      "require": "./dist/button/index.cjs",
      "import": "./dist/button/index.js",
      "types": "./dist/button/index.d.ts"
    },
    "./input": {
      "require": "./dist/input/index.cjs",
      "import": "./dist/input/index.js",
      "types": "./dist/input/index.d.ts"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "tailwindcss -i ./src/index.css -o ./dist/tailwind.css --minify",
    "build": "pnpm run prebuild && tsup",
    "dev": "npm run build -- --watch src"
  },
  "dependencies": {
    "@hyoban/utils": "workspace:*",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@hyoban/tailwind-config": "workspace:^",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.29",
    "tailwindcss": "^3.3.3"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
